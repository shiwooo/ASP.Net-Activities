<html>
<body>
    <form method="get">
        <br />
        <div class="form-inline mb-3">
            <input type="text" class="form-control mr-2" id="studId" name="studId" placeholder="Input Student ID" />
            <button type="submit" id="bntView" name="display" class="btn btn-primary">Search Record</button>
        </div>
        @{
            if (ViewData["studPic"] != null && ViewData["studLastname"] != null)
            {
                <br />
                <img src="../Home/Image?filename=@HttpUtility.UrlEncode(ViewData["studPic"].ToString())" width="50%"><br /><br />

                <table class="table table-striped table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Lastname</th>
                            <th>Firstname</th>
                            <th>Address</th>
                            <th>Filename</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewData["studLastname"]</td>
                            <td>@ViewData["studFirstname"]</td>
                            <td>@ViewData["studAddress"]</td>
                            <td>@ViewData["studPic"]</td>
                        </tr>
                    </tbody>
                </table>
            }
        }
    </form>
</body>
</html>

<script src="~/Scripts/jQueryLatest/jquery-3.7.1.min.js"></script>
<script src="~/Scripts/myScripts/viewStudent.js"></script>

